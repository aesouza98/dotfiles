#Aliases
### É difícil digitar clear
alias clera='clear'
alias claer='clear'
alias clrea='clear'
alias celar='clear'
alias caler='clear'
alias clrae='clear'
alias clrea='clear'
alias clare='clear'

#Addons
alias ls='eza --icons -s type'
alias find='fd'
alias grep='rg'
alias ggrep='rg --no-ignore-vcs'
alias cat='bat --style=auto'
alias ccat='bat -pp'
alias vim='nvim'
alias c='z'
alias emacs='emacs -nw'

#Packages
alias finstall='flatpak install'
alias fsearch='flatpak search'
alias fremove='flatpak remove'

#Others
alias ping='ping -i 0.2'
alias kde-restart='kquitapp5 plasmashell && kstart plasmashell'
alias dotfiles="nvim ~/dotfiles"
#alias code='flatpak run com.visualstudio.code-oss'

#Programs
alias notes='nvim ~/Documentos/Vault/aiqfome/'
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias mine='~/Applications/PrismLauncher'

# git
alias gadd='git add'
alias gcm='git commit -m'
alias gpsh='git push'
alias gtg='git tag'
alias gst='git status'

# Docker
alias rmc="docker container ls -a | grep -v CONTAINER | awk '{print \$1}' | xargs docker container rm"
alias rmi="docker image ls -a | grep -v REPOSITORY | awk '{print \$3}' | xargs docker image rm"
